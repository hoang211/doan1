<!-- Login Start -->
<div class="login">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="register-form">
                    <div class="row">
                        @using (Html.BeginForm("DangKy", "Login", FormMethod.Post))
                        {
                            <h4><div class="col-md-12"><label>Register</label></div></h4>
                            <div class="col-md-12">
                                <label>Full Name</label>
                                <input class="form-control" name="fullname" type="text" placeholder="First Name">
                            </div>
                            <div class="col-md-12">
                                <label>Sdt</label>
                                <input class="form-control" name="sdt" type="text" placeholder="Sdt">
                            </div>
                            <div class="col-md-12">
                                <label>E-mail</label>
                                <input class="form-control" name="email" type="text" placeholder="E-mail">
                            </div>
                            <div class="col-md-12">
                                <label>Address</label>
                                <input class="form-control" name="address" type="text" placeholder="Address">
                            </div>
                            <div class="col-md-12">
                                <label>UserName</label>
                                <input class="form-control" name="username" type="text" placeholder="UserName">
                            </div>
                            <div class="col-md-12">
                                <label>Password</label>
                                <input class="form-control" name="password" type="password" placeholder="Password">
                            </div>

                            <div class="col-md-12">
                                <button type="submit" class="btn">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login-form">
                    <div class="row">
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <h4><div class="col-md-12"><label>Login</label></div></h4>
                            <div class="col-md-12">
                                <label>E-mail / Username</label>
                                <input name="tk" class="form-control" type="text" placeholder="E-mail / Username">
                            </div>
                            <div class="col-md-12">
                                <label>Password</label>
                                <input name="mk" class="form-control" type="password" placeholder="Password">
                            </div>
                            <div class="col-md-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="newaccount">
                                    <label class="custom-control-label" for="newaccount">Keep me signed in</label>
                                </div>
                            </div>
                            <div>
                                @ViewBag.Err
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn">Submit</button>
                            </div>
                            }
                            

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
